<Window x:Class="WpfControlPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlPanel"
        xmlns:vm="clr-namespace:WpfControlPanel.ViewModel"
        xmlns:view="clr-namespace:WpfControlPanel.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <!--<StackPanel.Background>
                <LinearGradientBrush StartPoint="0, 1" EndPoint="1, 0">
                    <GradientStop Color="#00a460" Offset="0"/>
                    <GradientStop Color="#343a88" Offset="0.25"/>
                    <GradientStop Color="#50109e" Offset="0.50"/>
                    <GradientStop Color="#93278f" Offset="0.75"/>
                    <GradientStop Color="#ea6627" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>-->
            <Button Content="My button"></Button>
        </StackPanel>

        <ContentPresenter Grid.Column="1" Content="{Binding Path=CurrentWindow}">
            <ContentPresenter.Resources>
                <DataTemplate DataType="{x:Type vm:SettingVM}">
                    <view:SettingsView />
                </DataTemplate>
            </ContentPresenter.Resources>
        </ContentPresenter>
    </Grid>

    <Window.DataContext>
        <vm:MainWindowVM/>
    </Window.DataContext>
</Window>
